<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:elevation="2dp"
    android:layout_margin="@dimen/margin_size_medium">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_size_medium"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_product"
            android:layout_width="140dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/margin_size_medium"/>

        <TextView
            android:id="@+id/tv_product_brand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Gionee"
            android:textColor="@color/secondary_text"
            android:textSize="@dimen/text_size_h6"
            android:layout_marginBottom="@dimen/margin_size_small"/>

        <TextView
            android:id="@+id/tv_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="X1S 3GB RAM"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/text_size_h4"
            android:lines="1"
            android:layout_marginBottom="@dimen/margin_size_small"/>

        <TextView
            android:id="@+id/tv_product_special_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_text"
            tools:text="R$ 37,990"
            android:textSize="@dimen/text_size_h5"
            android:layout_marginBottom="@dimen/margin_size_small"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_product_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="R$ 53,996"
                android:textColor="@color/secondary_text"
                android:textSize="@dimen/text_size_h5"
                android:layout_marginBottom="@dimen/margin_size_small"/>

            <View
                android:layout_width="80dp"
                android:layout_height="0.3dp"
                android:layout_centerVertical="true"
                android:background="@color/secondary_text"/>

        </RelativeLayout>

        <RatingBar
            android:id="@+id/rb_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="0.1"
            android:isIndicator="true"
            style="?android:attr/ratingBarStyleSmall" />

    </LinearLayout>

</androidx.cardview.widget.CardView>